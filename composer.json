{
    "name": "balthild/php-cs-fixer-lsp",
    "description": "Language server for php-cs-fixer",
    "type": "project",
    "license": "MPL-2.0",
    "authors": [
        {
            "name": "Balthild",
            "email": "ibalthild@gmail.com"
        }
    ],
    "bin": "bin/php-cs-fixer-lsp",
    "require": {
        "php": "^8.2",
        "composer-runtime-api": "^2.2",
        "amphp/file": "2.x-dev",
        "amphp/parallel": "^1.4",
        "amphp/process": "^1.1",
        "amphp/sync": "^1.4",
        "fidry/cpu-core-counter": "^1.3",
        "friendsofphp/php-cs-fixer": "3.92.5",
        "phpactor/language-server": "dev-master",
        "sebastian/diff": "^6.0",
        "symfony/console": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "Balthild\\PhpCsFixerLsp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Balthild\\PhpCsFixerLsp\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
